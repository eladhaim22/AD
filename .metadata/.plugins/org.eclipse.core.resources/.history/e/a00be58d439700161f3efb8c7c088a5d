ckage hbt;

import java.util.List;

import org.hibernate.SessionFactory;
import org.hibernate.classic.Session;

public class HibernateDao {
	public List cantidadAlumnosCurso(){
		SessionFactory sf = HibernateUtil.getSessionFactory();
		Session session = sf.openSession();
		String query = "select cur.cantidad, cur.idCurso  from Curso cur";
		List result = session.createQuery(query).list();
		session.close();
		return result;
	}
	
	public List profesoresQueDictanMasDeUnaMateria(){
		SessionFactory sf = HibernateUtil.getSessionFactory();
		Session session = sf.openSession();
		String query = "select prof.Nombre from Profesor prof where size(prof.materia)>1";
		List retult = session.createQuery(query).list();
		session.close();
		return retult;
		
		
	}
	
	
}
