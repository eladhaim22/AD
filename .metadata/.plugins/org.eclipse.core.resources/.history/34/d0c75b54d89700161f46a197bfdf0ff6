package app;

import java.rmi.*;
import java.rmi.registry.LocateRegistry;
import java.rmi.registry.Registry;
import java.rmi.server.UnicastRemoteObject;

import remoto.ITestService;
import service.TestService;

public class BS {
    
    public void publicarServicio() {
    	try {
    		ITestService cons = new TestService();
    		ITestService stub = (ITestService) UnicastRemoteObject.exportObject( cons, 0);
			LocateRegistry.createRegistry(1044);
			Naming.rebind("//localhost/Test", stub);
		} catch (Exception e) {
			e.printStackTrace();
		}
    }
    
}
