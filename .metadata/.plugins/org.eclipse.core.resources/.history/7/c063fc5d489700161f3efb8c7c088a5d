package app;

import java.rmi.*;
import java.rmi.registry.LocateRegistry;
import java.rmi.registry.Registry;
import java.rmi.server.UnicastRemoteObject;

import remoto.ITest;
import service.SistemaDeSucirsal;

public class BS {
    
    public void publicarServicio() {
    	try {
    		ITest cons = new SistemaDeSucirsal();
    		ITest stub = (ITest) UnicastRemoteObject.exportObject( cons, 0);
			LocateRegistry.createRegistry(Registry.REGISTRY_PORT);
			Naming.rebind("//localhost/Sucursal", stub);
		} catch (Exception e) {
			e.printStackTrace();
		}
    }
    
}
